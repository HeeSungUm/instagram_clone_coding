<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_civ"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"/>
    <TextView
        android:text="허클베리피"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/profile_civ"
        app:layout_constraintBottom_toBottomOf="@id/profile_civ"
        app:layout_constraintLeft_toRightOf="@id/profile_civ"
        android:layout_marginStart="16dp"
        android:textColor="#000"/>
    <ImageView
        android:id="@+id/timeline_main_iv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@id/profile_civ"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/timeline_btn_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/timeline_main_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="8dp">
        <ImageButton
            android:id="@+id/timeline_heart_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_favorite_border_28"
            android:padding="0dp"
            android:background="#fff"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageButton
            android:id="@+id/timeline_comment_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_baseline_chat_bubble_outline_28"
            app:layout_constraintLeft_toRightOf="@id/timeline_heart_btn"
            android:background="#fff"
            app:layout_constraintTop_toTopOf="@id/timeline_heart_btn"
            app:layout_constraintBottom_toBottomOf="@id/timeline_heart_btn"/>
        <ImageButton
            android:id="@+id/timeline_share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_outline_near_me_28"
            app:layout_constraintLeft_toRightOf="@id/timeline_comment_btn"
            android:background="#fff"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageButton
            android:id="@+id/timeline_bookmark_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:background="#fff"
            android:src="@drawable/ic_baseline_bookmark_border_28"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/timeline_who_liked_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/timeline_btn_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="8dp"
        android:text="누구누구님 외 252명이 좋아합니다."
        android:layout_marginTop="8dp"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/timeline_desc_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/timeline_who_liked_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="8dp"
        android:text="허클베리피 허클베리피의 'VerseDay' 온라인 공연티켓 판매가 오픈되었습니다."
        android:layout_marginTop="2dp"
        android:textColor="#000"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:layout_constraintTop_toBottomOf="@id/timeline_desc_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>